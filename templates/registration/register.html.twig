{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1 class="d-flex flex-column justify-content-center align-items-center link-light">Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
  <div class="row pt-5">
		<div class="col-lg-8 offset-lg-2 col-12 pt-5">
		    <form>
		      <div class="form-group">
		          <div class="row">
		            <div class="col-md-6">
		              {{ form_row(registrationForm.Nom) }}
		            </div>
		            <div class="col-md-6">
		              {{ form_row(registrationForm.Prenom) }}
		            </div>
		          </div>
		      </div>
   <div class="form-group">
		          <div class="row">
		            <div class="col-md-6">
		              {{ form_row(registrationForm.Email) }}
		            </div>
		            <div class="col-md-6">
		              {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
		            </div>
		          </div>
		      </div>
              <div class="form-check">
  {{ form_row(registrationForm.AccepterLesConditions) }}
</div>
        
       

        <button type="submit" class="link-primary btn btn-light">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
